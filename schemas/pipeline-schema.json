        "CompositeNodeSpec": {
            "allOf": [
                {
                    "$ref": "#/$defs/Node"
                }
            ],
            "description": "Specification for composite_node type",
            "properties": {
                "kind": {
                    "const": "composite_node",
                    "description": "Node type: composite_node"
                },
                "metadata": {
                    "properties": {
                        "annotations": {
                            "description": "Optional metadata annotations",
