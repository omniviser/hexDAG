[run]
source = hexai
omit =
    */tests/*
    */test_*
    */conftest.py
    */__pycache__/*
    */examples/*
    */.venv/*
    */venv/*
    */site-packages/*
    */__init__.py

[report]
exclude_lines =
    pragma: no cover
    def __repr__
    def __str__
    if self.debug:
    if settings.DEBUG
    raise AssertionError
    raise NotImplementedError
    if 0:
    if __name__ == .__main__.:
    class .*\bProtocol\):
    @(abc\.)?abstractmethod
    @abstractmethod
    # TYPE_CHECKING imports
    if TYPE_CHECKING:
    # Defensive assertions
    assert False
    # Development/debug code
    if DEBUG:

[html]
directory = htmlcov

[xml]
output = coverage.xml
