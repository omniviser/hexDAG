# HexDAG Configuration Example
# This file demonstrates the TOML configuration format for HexDAG

# Core modules to load
modules = [
    "hexai.core.application.nodes",
    "hexai.adapters.mock",
]

# Plugin modules (third-party or custom)
plugins = [
    # "my_plugin.components",
